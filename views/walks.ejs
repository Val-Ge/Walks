<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Walks Map</title>
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="/stylesheets/partials.css">
  <link rel="stylesheet" href="/stylesheets/walks.css">
</head>
<body>
<%- include('./partials/navbar') %>
<%- include('layouts/walksboilerplate') %>
  <div class="container">
    <div class="content">
      <h1>Walks in the UK</h1>
      <!-- You can add more content here if needed -->
    </div>
    <div id="map"></div>
  </div>

  <%- include('./partials/footer') %>
  <!-- Leaflet JavaScript -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Initialize the map
    const map = L.map('map').setView([54.5, -3], 6); // Centered on the UK with a zoom level of 6

    // Add a tile layer to the map
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Example marker (adjust coordinates as needed)
    L.marker([52.136436, -0.460739]).addTo(map)
      .bindPopup('<b>Bedford</b><br>The place to be!!.')
      .openPopup();
  </script>
</body>
</html>
