<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Walks Map</title>
  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <link rel="stylesheet" href="/stylesheets/partials.css">
  <link rel="stylesheet" href="/stylesheets/walks.css">
</head>

<body>
  <%- include('./partials/navbar') %>
  <%- include('layouts/walksboilerplate') %>
  <div class="container">
    <div class="content">
      <h1>Walks in the UK</h1>
    </div>
    <div id="map"></div>
  </div>
  <%- include('./partials/footer') %>

  <!-- Leaflet JavaScript -->
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Embed the JSON data directly
    const walks = <%- JSON.stringify(walks) %>;

    // Debugging line to check the data format
    console.log('Walks data:', walks);

    // Initialize the map
    const map = L.map('map').setView([54.5, -3], 6); // Centered on the UK with a zoom level of 6

    // Add a tile layer to the map
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Loop through the walks array and add markers
    if (Array.isArray(walks)) {
      walks.forEach(walk => {
        let lat, lng;

        // Handle both coordinate formats
        if (Array.isArray(walk.coordinates) && walk.coordinates.length === 2) {
          [lat, lng] = walk.coordinates;
        } else if (walk.coordinates && typeof walk.coordinates.lat === 'number' && typeof walk.coordinates.lon === 'number') {
          lat = walk.coordinates.lat;
          lng = walk.coordinates.lon;
        } else {
          console.error('Invalid or missing coordinates:', walk.coordinates);
          return; // Skip this walk if coordinates are invalid
        }

        // Add marker to the map
        const marker = L.marker([lat, lng]).addTo(map);
        marker.bindPopup(`
          <b>${walk.title}</b><br>
          Distance: ${walk.distance}<br>
          Difficulty: ${walk.difficulty}<br>
          <img src="/${walk.image}" alt="${walk.title}" style="width:100px;height:auto;">
        `);
      });
    } else {
      console.error('Walks is not an array:', walks);
    }
  </script>
</body>
</html>

